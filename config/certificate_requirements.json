{
  "personeria": {
    "name": "Certificado de Personería",
    "description": "Certifies the legal status and representation of a company",
    "articles": ["248", "249", "250", "255"],
    "cross_references": ["130"],
    "required_documents": [
      {
        "name": "Estatuto",
        "description": "Company statute/bylaws",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must contain company name",
          "Must show company constitution date",
          "Must be registered in Registro Nacional de Comercio"
        ]
      },
      {
        "name": "Acta de Directorio",
        "description": "Board of directors meeting minutes",
        "mandatory": true,
        "max_age_days": 365,
        "validation_rules": [
          "Must show current board members",
          "Must have designation date",
          "Must be signed"
        ]
      },
      {
        "name": "Cédula de Identidad",
        "description": "National ID of representative",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must be valid Uruguayan ID",
          "Must match representative name"
        ]
      },
      {
        "name": "Inscripción en Registro de Comercio",
        "description": "Commercial registry inscription",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must show registry number",
          "Must show inscription date"
        ]
      }
    ]
  },
  "firma": {
    "name": "Certificado de Firma",
    "description": "Certifies the authenticity of signatures",
    "articles": ["248", "250", "251", "255"],
    "cross_references": ["130"],
    "required_documents": [
      {
        "name": "Cédula de Identidad",
        "description": "National ID of signer",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must be valid Uruguayan ID",
          "Must match signer name"
        ]
      },
      {
        "name": "Documento a firmar",
        "description": "Document to be signed",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must contain signature",
          "Must identify the signer"
        ]
      }
    ]
  },
  "representacion": {
    "name": "Certificado de Representación",
    "description": "Certifies the power of representation",
    "articles": ["248", "249", "250", "255"],
    "cross_references": ["130"],
    "required_documents": [
      {
        "name": "Estatuto",
        "description": "Company statute showing representation rules",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must define representation powers",
          "Must be registered"
        ]
      },
      {
        "name": "Acta de Directorio",
        "description": "Board meeting designating representative",
        "mandatory": true,
        "max_age_days": 365,
        "validation_rules": [
          "Must show representative designation",
          "Must specify powers granted"
        ]
      },
      {
        "name": "Cédula de Identidad",
        "description": "ID of representative",
        "mandatory": true,
        "max_age_days": null,
        "validation_rules": [
          "Must be valid Uruguayan ID"
        ]
      },
      {
        "name": "Poder",
        "description": "Power of attorney if applicable",
        "mandatory": false,
        "max_age_days": 365,
        "validation_rules": [
          "Must be notarized",
          "Must specify granted powers"
        ]
      }
    ]
  },
